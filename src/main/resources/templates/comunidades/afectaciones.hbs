{{#partial "contenido"}}
    <div class="flex flex-col p-5 justify-center items-center">
        <h1 class="text-2xl font-bold mb-4">Selecciona su rol para cada Prestacion</h1>
            {{#if afectaciones}}
                <form method="post">
                <div class="flex flex-col gap-4">
                    {{#each afectaciones}}
                        <div class="bg-white p-4 rounded-lg shadow-md">
                            <h2 class="text-lg font-semibold">{{this.prestacionDeServicio.nombre}}</h2>
                            <div class="mt-2">
                                <label for="{{this.id}}" class="flex items-center space-x-2 cursor-pointer">
                                    <div class="text-gray-700 font-semibold text-lg">
                                        <i class="far fa-eye text-blue-500"></i> Observador
                                    </div>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" class="sr-only peer" id="{{this.id}}" name="afectacion" value='{{this.id}}' {{#if this.afectado}}checked{{/if}}>
                                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
                                    </label>
                                    <div class="text-gray-700 font-semibold text-lg">
                                        <i class="fas fa-exclamation-triangle text-red-500"></i> Afectado
                                    </div>
                                </label>
                            </div>
                        </div>
                    {{/each}}
                    <button type="submit" class="button">
                        Guardar
                    </button>
                </div>
                </form>
            {{else}}
                <p>No hay afectaciones</p>
            {{/if}}
        </div>
    </div>
{{/partial}}
{{#partial "agregarScript"}}
    <script src="/js/afectaciones.js"></script>
{{/partial}}
{{>templates/templateBase}}