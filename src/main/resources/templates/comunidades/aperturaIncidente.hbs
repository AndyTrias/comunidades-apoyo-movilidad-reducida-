{{#partial "contenido"}}
  <main class="mb-auto p-10 flex items-center justify-center h-screen">
    <div class="p-4 md:w-1/3">
        <div class="h-full secondary rounded-lg overflow-hidden">
            <div class="p-6 flex flex-col justify-center items-center">
                <h1 class="text-2xl font-bold mb-4 text-black">
                    Agregar Incidente
                </h1>
                <form action="/comunidades/{{comunidad.id}}/incidentes" method="POST">
                    <div class="mb-4 flex flex-col">
                        <label for="prestacionId" class="text-sm text-gray-500 mb-2">Prestación de Servicio:</label>
                        <select id="prestacionId" name="prestacionId" class="border rounded-md py-1 px-2" required>
                            <option selected disabled hidden>Seleccionar Prestación</option>
                            {{#each comunidad.serviciosDeInteres}}
                                <option value="{{this.id}}">{{this.nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="mb-4 flex flex-col">
                        <label for="observaciones" class="text-sm text-gray-500 mb-2">Detalles del Incidente:</label>
                        <textarea id="observaciones" name="observaciones" rows="4" class="border rounded-md py-1 px-2" required></textarea>
                    </div>
                    <button type="submit" class="button">
                        Agregar Incidente
                    </button>
                </form>
            </div>
        </div>
    </div>
</main>

{{/partial}}
{{> templates/templateBase }}