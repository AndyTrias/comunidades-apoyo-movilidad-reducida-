{{#partial "contenido"}}


    <div class="p-4 md:w-1/3">
        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
            <div class="p-6 flex flex-col justify-center items-center">

                <h1 class="title-font text-lg font-medium text-gray-900 mb-2">{{incidente.incidente.prestacionDeServicio.nombre}}</h1>
                <div class="p-6 flex flex-col justify-center items-center">
                    <form method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <h3 class="text-xl font-medium text-gray-700 mb-2">Datos del Incidente</h3>
                        <div class="mb-4 flex flex-col">
                            <p class="text-gray-600 mb-2">
                                <strong>Fecha:</strong> {{incidente.incidente.fechaDeApertura}}</p>
                        </div>
                        <div class="mb-4 flex flex-col">
                            <p class="text-gray-600 mb-2">
                                <strong>Usuario:</strong> {{incidente.incidente.abiertoPor.nombre}}</p>
                        </div>
                        <div class="mb-4 flex flex-col">
                            <p class="text-gray-600 mb-2"><strong>Prestación
                                Servicio:</strong> {{incidente.incidente.prestacionDeServicio.nombre}}</p>
                        </div>
                        <div class="mb-4 flex flex-col">
                            <p class="text-gray-600 mb-2">
                                <strong>Descripción:</strong> {{incidente.incidente.observaciones}}</p>
                        </div>

                        {{#if incidente.abierto}}
                            <button type="submit"
                                    class="inline-flex text-white bg-red-500 border-0 py-2 px-6 focus:outline-none hover:bg-red-600 rounded text-lg">
                            </button>
                        {{else}}
                            <div class="icono bg-red-400">
                                <p> Incidente Cerrado </p>
                            </div>
                        {{/if}}

                    </form>
                </div>
            </div>
        </div>
    </div>


{{/partial}}
{{> templates/template }}