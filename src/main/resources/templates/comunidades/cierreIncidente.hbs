{{#partial "contenido"}}


    <div class="flex flex-col items-center h-full justify-center">
        <div class="rounded-lg overflow-hidden flex items-center" {{#if incidente.abierto}}style="background-color:#D3D3D3" {{else}}style="background-color:#f0aaaa"{{/if}}>
            <div class="p-6 flex flex-col justify-center items-center">
                <h1 class="title-font font-bold text-gray-900 mb-2 capitalize text-2xl underline">{{incidente.incidente.prestacionDeServicio.nombre}}</h1>
                <form action="{{incidente.id}}/cerrar" method="POST"
                      class="p-6 flex flex-col justify-center items-center">
                    <h3 class="text-xl font-bold text-gray-700 mb-2">Datos del Incidente</h3>
                    <div class="mb-4 flex flex-col">
                        <p class="text-gray-800 mb-2">
                            <strong>Fecha:</strong> {{incidente.incidente.fechaDeApertura}}</p>
                    </div>
                    <div class="mb-4 flex flex-col">
                        <p class="text-gray-800 mb-2">
                            <strong>Usuario:</strong> {{incidente.incidente.abiertoPor.nombre}}</p>
                    </div>
                    <div class="mb-4 flex flex-col">
                        <p class="text-gray-800 mb-2"><strong>Prestación
                            Servicio:</strong> {{incidente.incidente.prestacionDeServicio.nombre}}</p>
                    </div>
                    <div class="mb-4 flex flex-col">
                        <p class="text-gray-800 mb-2">
                            <strong>Descripción:</strong> {{incidente.incidente.observaciones}}</p>
                    </div>

                    {{#if incidente.abierto}}
                        <button type="submit"
                                class="button ">
                            Cerrar Incidente
                        </button>
                    {{else}}
                        <div class="inline-flex text-red-500  py-2 px-6 focus:outline-none rounded text-lg">
                            <p class="capitalize text-2xl text-red-900"> Incidente Cerrado </p>
                        </div>
                        <p class="text-black">Cerrado Por: {{incidente.cerradoPor.nombre}}</p>
                        <p class="text-black">Fecha de Cierre: {{incidente.fechaDeCierre}}</p>
                    {{/if}}

                </form>

            </div>
        </div>
    </div>


{{/partial}}
{{> templates/templateBase }}