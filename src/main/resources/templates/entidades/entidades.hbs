{{#partial "contenido"}}
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-16">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nombre
                </th>
                <th scope="col" class="px-3 py-3">
                    Establecimientos
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Edit</span>
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Borrar</span>
                </th>
            </tr>
            </thead>
            <tbody>
            {{#each entidades}}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{this.nombre}}
                    </th>
                    <td class="px-6 py-4">
                        <a href="/admin/entidades/{{this.id}}/establecimientos" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Ver</a>
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="/admin/entidades/{{this.id}}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Editar</a>
                    </td>
                    <td class="px-6 py-4 text-right">
                        <form action="/admin/entidades/{{this.id}}/delete" method="post">
                            <input type="hidden" name="_method" value="delete">
                            <button class="font-medium text-red-600 dark:text-red-500 hover:underline" type="submit">Borrar</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/partial}}
{{> templates/templateBase }}