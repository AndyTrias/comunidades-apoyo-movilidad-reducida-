{{#partial "contenido"}}
    <main class="p-8 flex flex-wrap justify-center gap-4">
        <form class="p-8 flex flex-col md:w-1/2 w-full rounded mt-4 items-center shadow-2xl bg-gray-100" action="/admin/usuarios/entidad" method="POST">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">
                Designar Usuario de Entidades Prestadoras
            </h2>
            <div class="mb-4 w-full">
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="text" id="email" name="email" class="input" required="">
            </div>
            <div class="mb-4 w-full">
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Contraseña</label>
                <input type="password" id="password" name="password" class="input" required="">
            </div>
            <div class="mb-4 w-full">
                <label for="rol" class="block text-gray-700 text-sm font-bold mb-2">Entidad Prestadora</label>
                <select required="" id="rol" name="prestadora" class="input" data-te-select-init data-te-select-filter="true">
                    <option selected="" disabled="" hidden="">Seleccionar prestadora</option>

                    {{#each prestadoras}}
                        <option value="{{this.id}}">{{this.nombre}}</option>
                    {{/each}}

                </select>
            </div>

            <button type="submit" class="button w-1/2">
                Crear Usuario
            </button>
        </form>
        <form class="p-8 flex flex-col md:w-1/2 w-full rounded mt-4 items-center shadow-2xl bg-gray-100" action="/admin/usuarios/organismo" method="POST">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                Designar Usuario de Organismo de Control
            </h1>
            <div class="mb-4 w-full">
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="text" id="email" name="email"
                       class="input"
                       required>
            </div>
            <div class="mb-4 w-full">
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Contraseña</label>
                <input type="password" id="password" name="password"
                       class="input"
                       required>
            </div>
            <div class="mb-4 w-full">
                <label for="organismo" class="block text-gray-700 text-sm font-bold mb-2">Organismo de control</label>
                <select required id="organismo" name="organismo"
                        data-te-select-init data-te-select-filter="true"
                        class="input"
                        required>
                    <option selected disabled hidden>Seleccionar organismo</option>
                    {{#each organismos}}
                        <option value="{{this.id}}">{{this.nombre}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit"
                    class="button w-1/2">
                Crear Usuario
            </button>
        </form>
    </main>
{{/partial}}
{{>templates/templateBase}}