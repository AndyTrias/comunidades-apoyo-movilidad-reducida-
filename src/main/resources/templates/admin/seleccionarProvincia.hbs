{{#partial "contenido"}}
<div class="m-5 flex flex-col justify-center items-center">
    <ol class="flex items-center w-1/2 p-3 space-x-2 text-sm font-medium text-center text-gray-500 bg-white border border-gray-200 rounded-lg shadow-sm dark:text-gray-400 sm:text-base dark:bg-gray-800 dark:border-gray-700 sm:p-4 sm:space-x-4">
        <li class="flex items-center text-blue-600 dark:text-blue-500">
                <span class="flex items-center justify-center w-5 h-5 mr-2 text-xs border border-blue-600 rounded-full shrink-0 dark:border-blue-500">
                    1
                </span>
            Provincia
            <svg class="w-3 h-3 ml-2 sm:ml-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
            </svg>
        </li>
        <li class="flex items-center">
                <span class="flex items-center justify-center w-5 h-5 mr-2 text-xs border border-gray-500 rounded-full shrink-0 dark:border-gray-400">
                    2
                </span>
            Municipio
            <svg class="w-3 h-3 ml-2 sm:ml-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
            </svg>
        </li>
        <li class="flex items-center">
                <span class="flex items-center justify-center w-5 h-5 mr-2 text-xs border border-gray-500 rounded-full shrink-0 dark:border-gray-400">
                    3
                </span>
            Localidad
        </li>
    </ol>

    <!-- Dropdown menu -->
    <div id="dropdownSearch" class="w-1/2 z-10 bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-3">
            <label for="input-group-search" class="sr-only">Buscar Provincia</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                            stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                    </svg>
                </div>
                <input type="text" id="input-group-search"
                    class="block w-full p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Buscar Provincia">
            </div>
        </div>
        <ul class="p-3 space-y-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownRadioBgHoverButton">
            {{#each provincias}}
                <li>
                  <div class="flex items-center p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                      <input id="default-radio-4" type="radio" value={{this.id}} name="default-radio" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                      <label for="default-radio-4" class="w-full ml-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">{{this.nombre}}</label>
                  </div>
                </li>
            {{/each}}
          </ul>

    </div>

    <div class="flex justify-center mt-6">
        <a id="nextButton"
           class="text-white bg-blue-700 hover-bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark-hover-bg-blue-700 dark-focus-ring-blue-800">
            Siguiente paso
            <i class="fas fa-arrow-right ml-2"></i>
        </a>
    </div>
    <script>
        document.getElementById("nextButton").addEventListener("click", function (event) {
            event.preventDefault(); // Evita la navegación predeterminada.

            var selectedProvincia = document.querySelector('input[name="default-radio"]:checked');
            if (selectedProvincia) {
                var provinciaValue = selectedProvincia.value;
                var newURL = "./seleccionarMunicipio?provincia=" + provinciaValue;
                window.location.href = newURL; // Redirige a la nueva URL.
            } else {
                // Aquí puedes manejar el caso en el que no se haya seleccionado una provincia.
                alert("Por favor, selecciona una provincia antes de continuar.");
            }
        });
    </script>
</div>
{{/partial}}
