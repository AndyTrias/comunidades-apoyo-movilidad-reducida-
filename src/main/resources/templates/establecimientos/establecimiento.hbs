{{#partial "contenido"}}
    <div class="p-10 flex flex-col gap-4 justify-center items-center">
        <form method="POST" class="w-1/2 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" {{#if establecimiento}}action="/admin/establecimientos/{{establecimiento.id}}" {{else}}action="admin/establecimientos"{{/if}}  >
            <h2 class="text-lg font-semibold mb-4">Entidad</h2>
            <div class="mb-4">
                <label for="establecimiento-nombre" class="block text-gray-700 text-sm font-bold mb-2">Nombre:</label>
                <input type="text" id="establecimiento-nombre" {{#if establecimiento}}value="{{establecimiento.nombre}}" {{/if}} name="nombre"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                       required>
            </div>
            <div class="mb-4">
                <label for="entidad" class="block text-gray-700 text-sm font-bold mb-2">Entidad:</label>
                <select required id="entidad" name="entidad"
                        data-te-select-init data-te-select-filter="true"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        required>
                    {{#if entidad}}
                        <option selected value="{{entidad.id}}">{{entidad.nombre}}</option>
                    {{else}}
                        <option selected disabled hidden>Seleccionar entidad</option>
                    {{/if}}
                    {{#each entidades}}
                        <option value="{{this.id}}">{{this.nombre}}</option>
                    {{/each}}
                </select>
            </div>
            <!--        <div class="flex items-center justify-between">-->
            <!--            <a href="./cargaManual/seleccionarUbicacion"-->
            <!--               class="flex-row bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">-->
            <!--                Seleccionar ubicacion-->
            <!--            </a>-->
            <!--        </div>-->
            <div class="flex items-center justify-between">
                <button type="submit"
                        class="button">
                    Guardar
                </button>
            </div>
        </form>
    </div>
{{/partial}}
{{> templates/templateBase }}