{{#partial "contenido"}}
    <div class="flex justify-center">
        <form method="POST" class="w-1/2 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"{{#if servicio}}
              action="/admin/servicios/{{servicio.id}}" {{else}} action="/admin/servicio" {{/if}}>
            <h2 class="text-lg font-semibold mb-4">Servicio</h2>
            <div class="mb-4">
                <label for="entidad-servicio" class="block text-gray-700 text-sm font-bold mb-2">Nombre:</label>
                <input type="text" id="entidad-servicio" name="nombre"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                       value="{{#if servicio}}{{servicio.nombre}}{{/if}}"
                       required>
            </div>
            <div class="flex items-center flex-row justify-between">
                <button type="submit"
                        class="button">
                    Guardar
                </button>
            </div>
        </form>
    </div>
{{/partial}}
{{> templates/templateBase }}